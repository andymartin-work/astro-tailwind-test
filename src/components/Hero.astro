---
interface Props {
  Name: string;
  Description: string;
}

const { Name, Description } = Astro.props as Props;
---

<section class="text-gray-600 body-font flex-col-reverse">
  <div
    class="container mx-auto flex px-5 pt-16 md:flex-row flex-col items-center"
  >
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6 mb-10 md:mb-0">
      <img
        src="/assets/AM_coffee-crop.webp"
        aria-hidden="true"
        loading="lazy"
        decoding="async"
        class="animate__animated animate__fadeIn object-cover object-center rounded"
        alt="photo"
        src="/assets/AM_coffee-crop.webp"
        width="1024"
        height="1368"
      />
    </div>
    <div
      class="lg:flex-grow md:w-1/2 lg:pl-24 md:pl-16 flex flex-col md:items-start md:text-left items-center text-center"
    >
      <h1
        style="font-family: 'Palatino', sans-serif;"
        class="title-font sm:text-5xl lg:text-8xl text-5xl mb-4 font-medium text-gray-900"
      >
        Hi, I'm <span class="text-blue-700">{Name}</span>

        <p
          class="animate__animated animate__fadeIn animate__delay-1s mb-8 leading-relaxed text-3xl md:text-3xl text-gray-900 mytext"
        >
          {Description}
        </p>
      </h1>

      <div class="flex flex-col sm:flex-row justify-center">
        <a href="about.html"
          ><button
            class="btn bg-blue-700 rounded sm:btn-outline inline-flex py-2 px-6 text-lg normal-case transition ease-in-out delay-150 animate__animated animate__fadeIn animate__delay-2s md:h-16 lg:h-auto mytext"
            >Get to know me</button
          ></a
        >
        <span class="hidden sm:block"
          ><a href="#1"
            ><button
              class="btn text-white rounded hover:bg-blue-700 bg-blue-700 ml-4 inline-flex py-2 px-6 text-lg normal-case transition ease-in-out delay-150 animate__animated animate__fadeIn animate__delay-2s md:h-16 lg:h-auto mytext"
              >View my portfolio</button
            ></a
          ></span
        >
      </div>
    </div>
  </div>
</section>
